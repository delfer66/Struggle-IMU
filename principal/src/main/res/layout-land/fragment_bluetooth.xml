<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.espe.controlbluetoothv1.Bluetooth"
    android:visibility="visible"
    android:id="@+id/frame_grande">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#18001aff"
        android:visibility="visible"
        android:id="@+id/frag_blue">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Press to Search"
                        android:id="@+id/textstart_blue"
                        style="@style/texto_Titulo_azul" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Estado"
                        android:id="@+id/textStatus"
                        android:layout_marginLeft="10dp"
                        style="@style/texto_azul_claro" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:weightSum="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left">

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:id="@+id/btn_buscar_bluetooth"
                            android:background="@drawable/bluetooth_logo_transp"
                            android:layout_gravity="center" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test"
                        android:id="@+id/bt_test"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descont."
                        android:id="@+id/bt_desconectar" />

                    <Button
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="OFF"
                        android:id="@+id/bt_off_bluetooth" />

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:text="ON"
                        android:id="@+id/bt_on_bluetooth" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp">

                    <ScrollView
                        android:layout_width="332dp"
                        android:layout_height="match_parent"
                        android:id="@+id/scrollView3" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/ayuda_conectar_robot"
                            android:id="@+id/textView20"
                            style="@style/texto_blanco_azul" />
                    </ScrollView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Enviado:"
                        android:id="@+id/textView22"
                        style="@style/texto_blanco_azul" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Ninguno"
                        android:id="@+id/enviado"
                        android:layout_marginLeft="10dp"
                        style="@style/texto_blanco_azul" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Consola:         "
                    android:id="@+id/textView19"
                    android:layout_gravity="right|top"
                    style="@style/texto_blanco_azul" />

                <ScrollView
                    android:id="@+id/desplegar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/layout1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowSpan="13"
                    android:layout_gravity="right|center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/consola_bluetooth">

                        <TextView
                            android:id="@+id/textRead"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            style="@style/texto_azul_claro" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#32ffffff">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_bluetooth"
            android:hint="@string/txt_hint"
            android:focusableInTouchMode="true"
            android:layout_weight="0.90"
            android:layout_gravity="bottom"
            style="@style/texto_blanco"
            android:textSize="12dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:id="@+id/btn_enviar_bluetooth"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_weight="0.10"
            android:textSize="12dp" />
    </LinearLayout>


</FrameLayout>
