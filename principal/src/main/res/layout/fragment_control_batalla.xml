<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.espe.control_batalla.ControlBatallaFragment"
    android:background="#7bffffff">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="#7bb7b7b7">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/desdeaqui">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shieldcomplex"
                    android:layout_gravity="center"
                    android:id="@+id/start_battle" />

                <TextView
                    style="@style/texto_blanco_rojo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_text_small"
                    android:id="@+id/textView15"
                    android:layout_gravity="center"
                    android:enabled="false" />
            </FrameLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hold"
                    android:id="@+id/mantener_envio_bluetooth"
                    style="@style/texto_blanco"
                    android:allowUndo="false"
                    android:layout_marginRight="20dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hold Constante"
                    android:id="@+id/mantener_envio_bluetooth_const"
                    android:checked="false"
                    style="@style/texto_blanco"
                    android:visibility="gone" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Boton Pulsado"
                android:id="@+id/textView6"
                style="@style/texto_blanco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pulse una tecla"
                android:id="@+id/txt_boton_pulsado"
                style="@style/texto_blanco" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/nota_controles_hold"
                    android:id="@+id/txt_nota_controles"
                    style="@style/texto_blanco"
                    android:layout_gravity="top" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Enemigo Vida"
                            android:id="@+id/textView7"
                            style="@style/texto_blanco_rojo" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|right">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="200dp"
                                android:layout_height="15dp"
                                android:background="#d40b0b"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:id="@+id/linear_barra_vida_enemigo" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:id="@+id/imageView3"
                                android:background="@drawable/barra_vida"
                                android:layout_gravity="right" />

                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
